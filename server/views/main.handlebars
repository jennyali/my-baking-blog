<main class="container">
    <section class="row">
        <div class="col-sm-12">
            {{#if pageTitle }}
                <h1 class="jumbotron">
                    {{ pageTitle }}
                </h1>
            {{/if}}
        </div>
    </section>
    <section class="row">

            {{#if homePage }}
                {{> recentPosts }}
            {{/if}}

            {{#if recipeIndexPage}}
                {{> recipeIndex }}
            {{/if}}

            {{#if viewPostPage }}
                {{> viewPost }}
            {{/if}}

            {{#if viewCategoryPage}}
                {{> viewCategory }}
            {{/if}}

            {{#if aboutPage }}
                {{> about }}
            {{/if}}

        </div>
    </section>
</main>