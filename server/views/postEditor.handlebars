<main class="container">
    <section class="row">
        <div class="col-sm-12">
            <h1>
                {{ pageTitle }}   
            </h1>
        </div>
    </section>
    <section class="row">

        {{#if success }}
            <div class="alert alert-success">
                <strong>Success!</strong><p>Created Post: {{ alertMsg }}</p>
            </div>
        {{/if}}

        {{#if update }}
            <div class="alert alert-info">
                <strong>Updated!</strong><p>Alterted Post: {{ alertMsg }}</p>
            </div>
        {{/if}}

        {{#if delete }}
            <div class="alert alert-danger">
                <strong>Deleted!</strong><p>Removed Post: {{ alertMsg }}</p>
            </div>
        {{/if}}

    </section>
    <section class="row">

        {{#if hasForm }}
            {{> form }}
        {{/if}}

        {{#if hasViewPost }}
            {{> adminViewPost }}
        {{/if}}

    </section>
    <section class="row">

        {{#if hasAllPosts }}
            {{> adminRecipeIndex }}
        {{/if}}

        {{#if hasPrefilledForm }}
            {{> formPrefilled }}
        {{/if}}

    </section>
</main>