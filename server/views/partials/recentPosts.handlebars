<div class="col-sm-8 col-md-9 section__recipe-panel">

    <div class="recipe-banner">
        <h4>Latest Recipe</h4>
    </div>

    {{#each foundPosts}}

        <article class="row recipe__article">

            <div class="panel panel-default">
                
                <div class="panel-body">
                
                    {{#if this.primaryPhoto}}
                        <img class="img-responsive" src="/assets/images/{{this.primaryPhoto}}">
                    {{/if}}
                    
                    <p>{{this.created}}</p>

                    <h2>{{this.title}}</h2>

                    <p>{{this.body}}</p>
            
                    <div>
                        <a href="/view-post/{{this._id}}" class="btn btn-primary pull-right">Read More >></a>
                    </div>
                </div>
            </div>

        </article>

    {{/each}}

    <div class="row recipe-pagination">
        <ul class="pagination text-center">

            {{#times pages}}
                <li><a href="/?p={{this}}">{{this}}</a></li>
            {{/times}}
            
        </ul>
    </div>

</div>