<section class="col-sm-8 col-md-9 section-home">

    <!--<div class="recipe-banner">
        <h4>Latest Recipe</h4>
    </div>-->

    <div class="jumbotron row">
        <h2>Welcome!</h2>
    </div> 

    <div class="row">
        <p class="col-sm-12">Browse here through my recent bakes or click the links to find out others. See what takes your fancy!</p>
    </div>

    {{#each foundPosts}}

        <article class="row">

            <div class="panel panel-default">
                
                <div class="panel-body">
                
                    {{#if this.primaryPhoto}}
                        <img class="img-responsive" src="/assets/images/{{this.primaryPhoto}}">
                    {{/if}}
                    
                    <p>{{this.created}}</p>

                    <h2>{{this.title}}</h2>

                    <p class="panel-recipe-description">{{this.body}}</p>
            
                    <div>
                        <a href="/view-post/{{this._id}}" class="btn btn-primary pull-right">Read More >></a>
                    </div>
                </div>
            </div>

        </article>

    {{/each}}

    <div class="row pagination">
        

        {{#paginator pageData}} {{/paginator}}
            
        
    </div>

</section>