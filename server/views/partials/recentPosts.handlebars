<div>

    {{#each foundPosts}}

        <article class="col-sm-8">
            <p class="small">{{this.created}}</p>
            <h2>{{this.title}}</h2>
            <p>{{this.body}}</p>
            <div>
                <a href="/view-post/{{this._id}}" class="btn btn-primary">Read More >></a>
            </div>
        </article>

    {{/each}}

</div>