<div class="col-sm-8">

    {{#each foundPosts}}

        <article class="row">
            <p class="small">{{this.created}}</p>
            <h2>{{this.title}}</h2>

            {{#if this.primaryPhoto}}
                <img class="img-responsive" src="/assets/images/{{this.primaryPhoto}}">
            {{/if}}
            
            <p>{{this.body}}</p>
            <div>
                <a href="/view-post/{{this._id}}" class="btn btn-primary">Read More >></a>
            </div>
        </article>

    {{/each}}

    <ul class="pagination text-center row">

        {{#times pages}}
            <li><a href="/?p={{this}}">{{this}}</a></li>
        {{/times}}
        
    </ul>

</div>