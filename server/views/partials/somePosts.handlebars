<section class="col-sm-12 row">

    {{#each foundPosts}}

        <article class="col-sm-8">
            <h2>{{this.title}}</h2>
            <p>{{this.body}}</p>
            <div>
                <a href="/post-editor/viewPost/{{this._id}}" class="btn btn-primary">Read More >></a>
            </div>
        </article>

    {{/each}}
</section>