<div class="col-sm-8 col-md-9 section-view-recipe">
    <div class="panel panel-default view-recipe__panel">
        <article>
            <h2 class="panel-heading">{{ foundPost.title }}</h2> 
            <div class="panel-body">
                <p class="small">{{foundPost.created}}</p>
                <div class="row">
                    <div class="col-sm-12">
                        {{#if foundPost.primaryPhoto}}
                            <img class="img-responsive" src="/assets/images/{{foundPost.primaryPhoto}}">
                        {{/if}}
                    </div>
                </div>

                <p class="view-recipe__text-block">{{ foundPost.body }}</p>

                {{#if foundPost.secondaryPhoto}}
                        <div class="row">
                                <div class="col-sm-12">
                                    <img class="img-responsive" src="/assets/images/{{foundPost.secondaryPhoto}}">
                                </div>
                            </div>
                {{/if}}

                <div class="row">
                    <div class="col-sm-12">
                        {{#if foundPost.ingredientList}}
                        <h3>Ingredients</h3>
                            <div class="view-recipe__list">
                                {{#each foundPost.ingredientList}}
                                    <ul class="col-sm-6">
                                        <li>
                                            <p style="display: inline-block">{{this.quantity}}</p>
                                            <p style="display: inline-block">{{this.unit}}</p>
                                            <p style="display: inline-block">{{this.name}}</p>
                                        </li>
                                    </ul>
                                {{/each}}
                            </div>
                        {{/if}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        {{#if foundPost.instructions}}
                            <h3>Instructions</h3>
                            <div>
                                <ol>
                                    {{#each foundPost.instructions}}
                                        <li>
                                            <p>{{this}}</p>
                                        </li>
                                    {{/each}}
                                </ol>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </article>
    </div>
</div>