<div class="col-sm-8 col-md-9 section-gallery">

    <div class="gallery-title">
        {{#if pageTitle }}
            <h2 class="jumbotron">
                {{ pageTitle }}
            </h2>
        {{/if}}
    </div>

    <div class="row gallery-img-block">

        {{#if foundPosts }}

            {{#each foundPosts }}

                {{#if this.primaryPhoto}}

                    <div class="col-sm-3 gallery-img-block__thumbnail">

                        <img class="img-responsive img-thumbnail" src="/assets/images/{{this.primaryPhoto}}">

                    </div>

                {{/if}}

            {{/each}}

        {{else}}

            <h3> Sorry No Photos Availible </h3>

        {{/if}}

    </div>

    <ul class="pagination text-center row">

        {{#times pages}}
            <li><a href="/gallery?p={{this}}">{{this}}</a></li>
        {{/times}}
        
    </ul>

</div>