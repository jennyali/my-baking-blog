<main class="container">
    <!-- Form for Post Creation -->
    <section>
        <div class="jumbotron row">
            <h1>{{ pageTitle }}</h1>
        </div>
        <div class="row">
            <div class="col-sm-8">
                {{#if success}}
                    <h3 class="alert alert-success">Success! post created.</h3>
                {{/if}}
                {{#if failed}}
                    <h3 class="alert alert-danger">Ooops! please check fields are filled in.</h3>
                {{/if}}
                <form method="POST" action="/createPost" class="form-group">
                    <div class="form-group {{#if title}}has-error{{/if}}">
                        <label for="title">Title:</label>
                        <input type="text" name="title" class="form-control"/>
                        {{#if title}}<span class="pull-right">* Title missing.</span>{{/if}}
                    <div>
                    <div class="form-group {{#if body}}has-error{{/if}}">
                        <br /><label for="body">Description:</label>
                        <textarea type="text" name="body" class="form-control"></textarea>
                        {{#if body}}<span class="pull-right">* Description missing.</span>{{/if}}
                    </div>
                    
                    <br /><input type="submit" value="Submit" class="btn btn-primary"/>
                </form>
            </div>
        </div>
    </section>
</main>